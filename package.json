{
  "name": "edit-script",
  "version": "2.0.0",
  "description": "Edit npm scripts from the command line without worrying about json escaping.",
  "keywords": [
    "npm scripts",
    "package.json",
    "edit",
    "json escaping"
  ],
  "bin": "cli.js",
  "author": "Ryan Zimmerman <opensrc@ryanzim.com>",
  "bugs": "https://github.com/RyanZim/edit-script/issues",
  "homepage": "https://github.com/RyanZim/edit-script#readme",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/RyanZim/edit-script.git"
  },
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "format": "eslint . --fix && prettier --write *.{js,md,yaml,json}"
  },
  "dependencies": {
    "inquirer": "^6.3.1",
    "jsonfile": "^5.0.0",
    "pkg-up": "^3.1.0"
  },
  "devDependencies": {
    "eslint": "^5.0.0",
    "eslint-config-problems": "^3.0.0",
    "prettier": "^2.8.1"
  },
  "prettier": {
    "singleQuote": true,
    "trailingComma": "all",
    "proseWrap": "never"
  }
}
